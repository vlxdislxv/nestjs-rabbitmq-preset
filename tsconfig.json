{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app-core/providers": [
        "libs/providers/src"
      ],
      "@app-core/providers/*": [
        "libs/providers/src/*"
      ],
      "@app-core/env": [
        "libs/env/src"
      ],
      "@app-core/env/*": [
        "libs/env/src/*"
      ]
    }
  }
}